<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DriverDashboardActivity">

    <!-- Main Content -->
    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <!-- Google Maps Fragment -->
        <fragment
            android:id="@+id/map_fragment"
            android:name="com.google.android.gms.maps.SupportMapFragment"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

        <!-- Top Banner with Menu Button -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/primary"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:paddingVertical="16dp"
            android:elevation="8dp">

            <ImageButton
                android:id="@+id/btn_menu"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_marginStart="8dp"
                android:background="?selectableItemBackgroundBorderless"
                android:src="@drawable/ic_menu"
                android:contentDescription="Menu"
                app:tint="@color/white" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="EduCarpool - Driver"
                android:textAppearance="@style/TextAppearance.Material3.TitleMedium"
                android:textColor="@color/white"
                android:gravity="center" />

            <View
                android:layout_width="48dp"
                android:layout_height="48dp" />

        </LinearLayout>

        <!-- Floating Address Card -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/card_address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="60dp"
            android:layout_gravity="center_horizontal"
            android:maxWidth="360dp"
            android:minWidth="300dp"
            android:visibility="gone"
            app:cardCornerRadius="20dp"
            app:cardElevation="16dp"
            app:cardBackgroundColor="@color/white"
            app:strokeColor="@color/gray_200"
            app:strokeWidth="1dp"
            app:contentPadding="16dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <ImageView
                    android:id="@+id/iv_home_icon"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_marginEnd="16dp"
                    android:src="@drawable/ic_home"
                    android:contentDescription="Home"
                    app:tint="@color/primary" />

                <TextView
                    android:id="@+id/tv_address"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Loading address..."
                    android:textAppearance="@style/TextAppearance.Material3.BodyMedium"
                    android:textColor="@color/gray_800"
                    android:maxLines="2"
                    android:ellipsize="end"
                    android:paddingEnd="12dp" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <ImageButton
                        android:id="@+id/btn_refresh"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:background="?selectableItemBackgroundBorderless"
                        android:src="@drawable/ic_refresh"
                        android:contentDescription="Refresh location"
                        app:tint="@color/primary"
                        android:layout_marginEnd="8dp" />

                    <ImageButton
                        android:id="@+id/btn_edit"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:background="?selectableItemBackgroundBorderless"
                        android:src="@drawable/ic_edit"
                        android:contentDescription="Edit address"
                        app:tint="@color/primary" />

                </LinearLayout>

            </LinearLayout>

        </com.google.android.material.card.MaterialCardView>

        <!-- Detour Information Card  -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/card_detour_info"
            android:layout_width="220dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginBottom="220dp"
            android:layout_gravity="bottom|start"
            android:visibility="gone"
            app:cardCornerRadius="12dp"
            app:cardElevation="12dp"
            app:cardBackgroundColor="@color/warning_light">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="12dp"
                android:gravity="center_vertical">

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_marginEnd="8dp"
                    android:src="@drawable/ic_info"
                    android:contentDescription="Info"
                    app:tint="@color/warning" />

                <TextView
                    android:id="@+id/tv_detour_info"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Detour info"
                    android:textAppearance="@style/TextAppearance.Material3.BodySmall"
                    android:textColor="@color/gray_800" />

            </LinearLayout>

        </com.google.android.material.card.MaterialCardView>

        <!-- Route Information Card  -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/card_route_info"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginBottom="120dp"
            android:layout_gravity="bottom|start"
            android:visibility="gone"
            app:cardCornerRadius="12dp"
            app:cardElevation="12dp"
            app:cardBackgroundColor="@color/white">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Route Info"
                    android:textAppearance="@style/TextAppearance.Material3.LabelMedium"
                    android:textColor="@color/gray_600"
                    android:textStyle="bold"
                    android:gravity="center" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginVertical="8dp"
                    android:background="@color/gray_300" />

                <TextView
                    android:id="@+id/tv_route_distance"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Distance: 0.0 km"
                    android:textAppearance="@style/TextAppearance.Material3.BodyMedium"
                    android:textColor="@color/gray_800" />

                <TextView
                    android:id="@+id/tv_route_duration"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:text="Duration: 0 min"
                    android:textAppearance="@style/TextAppearance.Material3.BodyMedium"
                    android:textColor="@color/gray_800" />

            </LinearLayout>

        </com.google.android.material.card.MaterialCardView>

        <!-- Action Buttons Container  -->
        <LinearLayout
            android:id="@+id/container_route_buttons"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|end"
            android:layout_marginEnd="16dp"
            android:layout_marginBottom="120dp"
            android:orientation="vertical"
            android:gravity="center"
            android:visibility="gone"
            android:padding="8dp">

            <!-- Show Full Route Button -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_add_campus_route"
                android:layout_width="wrap_content"
                android:layout_height="48dp"
                android:layout_marginBottom="12dp"
                android:text="Show Full Route"
                android:textAppearance="@style/TextAppearance.Material3.LabelLarge"
                app:cornerRadius="24dp"
                app:backgroundTint="@color/primary"
                app:icon="@drawable/ic_school"
                app:iconGravity="textStart" />

            <!-- Reset Map Button  -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_reset_map"
                android:layout_width="wrap_content"
                android:layout_height="48dp"
                android:text="Reset Map"
                android:textAppearance="@style/TextAppearance.Material3.LabelLarge"
                app:cornerRadius="24dp"
                app:backgroundTint="@color/gray_600"
                app:icon="@drawable/ic_refresh"
                app:iconGravity="textStart" />

        </LinearLayout>

        <!-- Bottom Sheet for Ride Requests -->
        <LinearLayout
            android:id="@+id/bottom_sheet"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="bottom"
            android:orientation="vertical"
            android:background="@drawable/bg_bottom_sheet_modern"
            android:elevation="24dp"
            app:layout_behavior="com.google.android.material.bottomsheet.BottomSheetBehavior"
            app:behavior_peekHeight="80dp"
            app:behavior_halfExpandedRatio="0.5"
            app:behavior_fitToContents="false">

            <!-- Handle Bar -->
            <View
                android:layout_width="40dp"
                android:layout_height="4dp"
                android:layout_marginTop="12dp"
                android:layout_marginBottom="16dp"
                android:layout_gravity="center_horizontal"
                android:background="@color/gray_300" />

            <!-- Panel Header -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingHorizontal="24dp"
                android:paddingBottom="16dp"
                android:gravity="center_vertical">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Ride Requests"
                    android:textAppearance="@style/TextAppearance.Material3.TitleSmall"
                    android:textColor="@color/gray_800" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <TextView
                        android:id="@+id/tv_request_count"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0 requests"
                        android:textAppearance="@style/TextAppearance.Material3.BodySmall"
                        android:textColor="@color/gray_600"
                        android:layout_marginEnd="12dp" />

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btn_refresh_requests"
                        android:layout_width="wrap_content"
                        android:layout_height="36dp"
                        android:text="Refresh Requests"
                        android:textSize="12sp"
                        android:paddingHorizontal="16dp"
                        app:cornerRadius="18dp"
                        app:backgroundTint="@color/primary" />

                </LinearLayout>

            </LinearLayout>

            <!-- Request List -->
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recycler_requests"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:paddingHorizontal="16dp"
                tools:listitem="@layout/item_request" />

            <!-- Empty State -->
            <LinearLayout
                android:id="@+id/layout_empty"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical"
                android:padding="48dp"
                android:visibility="visible">

                <ImageView
                    android:layout_width="96dp"
                    android:layout_height="96dp"
                    android:src="@drawable/ic_driver_empty"
                    android:contentDescription="No requests"
                    app:tint="@color/gray_400" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:text="No ride requests"
                    android:textAppearance="@style/TextAppearance.Material3.BodyLarge"
                    android:textColor="@color/gray_600" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text="When passengers send you ride requests, they'll appear here"
                    android:textAppearance="@style/TextAppearance.Material3.BodyMedium"
                    android:textColor="@color/gray_500"
                    android:textAlignment="center" />

            </LinearLayout>

        </LinearLayout>

        <!-- No Address Message -->
        <TextView
            android:id="@+id/tv_no_address"
            android:layout_width="280dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:padding="32dp"
            android:text="Home address not set â€” please update your profile."
            android:textAppearance="@style/TextAppearance.Material3.BodyLarge"
            android:textColor="@color/gray_700"
            android:background="@drawable/bg_no_address_message"
            android:elevation="16dp"
            android:visibility="gone" />

    </androidx.coordinatorlayout.widget.CoordinatorLayout>

    <!-- Navigation Drawer -->
    <com.google.android.material.navigation.NavigationView
        android:id="@+id/nav_view"
        android:layout_width="320dp"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:fitsSystemWindows="true"
        app:headerLayout="@layout/nav_header_passenger"
        app:menu="@menu/nav_menu_passenger"
        app:itemBackground="@drawable/nav_item_background" />

</androidx.drawerlayout.widget.DrawerLayout>