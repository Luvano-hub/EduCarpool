<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PassengerDashboardActivity">

    <!-- Google Maps Fragment -->
    <fragment
        android:id="@+id/map_fragment"
        android:name="com.google.android.gms.maps.SupportMapFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <!-- Small Top Banner -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:background="@color/eduBlue"
        android:paddingVertical="8dp"
        android:elevation="4dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="EduCarpool"
            android:textColor="@color/white"
            android:textSize="18sp"
            android:textStyle="bold"
            android:gravity="center" />

    </LinearLayout>

    <!-- Top Floating Address Card -->
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/card_address"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="60dp"
        android:layout_centerHorizontal="true"
        android:maxWidth="360dp"
        android:minWidth="300dp"
        android:visibility="gone"
        app:cardCornerRadius="16dp"
        app:cardElevation="12dp"
        app:cardBackgroundColor="#E8F4FD"
        app:contentPadding="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <!-- Home Icon -->
            <ImageView
                android:id="@+id/iv_home_icon"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_marginEnd="16dp"
                android:src="@drawable/ic_home"
                android:contentDescription="Home"
                app:tint="@color/primary" />

            <!-- Address Text -->
            <TextView
                android:id="@+id/tv_address"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="123 Main Street, Johannesburg"
                android:textSize="15sp"
                android:textColor="@color/gray_800"
                android:maxLines="2"
                android:ellipsize="end"
                android:paddingEnd="12dp" />

            <!-- Action Buttons Container -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <!-- Refresh Button -->
                <ImageButton
                    android:id="@+id/btn_refresh"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:background="?selectableItemBackgroundBorderless"
                    android:src="@drawable/ic_refresh"
                    android:contentDescription="Refresh location"
                    app:tint="@color/primary"
                    android:layout_marginEnd="8dp" />

                <!-- Edit Button -->
                <ImageButton
                    android:id="@+id/btn_edit"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:background="?selectableItemBackgroundBorderless"
                    android:src="@drawable/ic_edit"
                    android:contentDescription="Edit address"
                    app:tint="@color/primary" />

            </LinearLayout>

        </LinearLayout>

    </com.google.android.material.card.MaterialCardView>

    <!-- No Address Message -->
    <TextView
        android:id="@+id/tv_no_address"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:gravity="center"
        android:padding="32dp"
        android:text="Home address not set â€” please update your profile."
        android:textSize="18sp"
        android:textColor="@color/gray_700"
        android:background="@color/white"
        android:elevation="8dp"
        android:visibility="gone" />

</RelativeLayout>