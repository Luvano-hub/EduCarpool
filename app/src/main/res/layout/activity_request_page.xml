<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/eduBlue"
    android:padding="24dp"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal">

        <!-- Page Title -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Request a Ride"
            android:textSize="26sp"
            android:textStyle="bold"
            android:textColor="@android:color/white"
            android:layout_marginBottom="32dp" />

        <!-- Pickup Location -->
        <com.google.android.material.textfield.TextInputLayout
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:boxBackgroundMode="outline"
            app:boxStrokeColor="@color/white_input_stroke"
            app:hintTextColor="@color/white_input_stroke"
            app:boxStrokeWidthFocused="2dp"
            app:boxStrokeColor="@android:color/white"
            app:hintTextColor="@android:color/white">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/et_pickup"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Pickup Location"
                android:textColor="@android:color/white"
                android:textColorHint="@android:color/white"
                android:inputType="text"
                android:padding="16dp" />
        </com.google.android.material.textfield.TextInputLayout>

        <!-- Destination -->
        <com.google.android.material.textfield.TextInputLayout
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:boxBackgroundMode="outline"
            app:boxStrokeColor="@color/white_input_stroke"
            app:hintTextColor="@color/white_input_stroke"
            app:boxStrokeWidthFocused="2dp"
            app:boxStrokeColor="@android:color/white"
            app:hintTextColor="@android:color/white">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/et_destination"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Destination"
                app:boxBackgroundMode="outline"
                app:boxStrokeColor="@color/white_input_stroke"
                app:hintTextColor="@color/white_input_stroke"
                app:boxStrokeWidthFocused="2dp"
                android:textColor="@android:color/white"
                android:textColorHint="@android:color/white"
                android:inputType="text"
                android:padding="16dp" />
        </com.google.android.material.textfield.TextInputLayout>

        <!-- Time -->
        <com.google.android.material.textfield.TextInputLayout
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:boxBackgroundMode="outline"
            app:boxStrokeColor="@color/white_input_stroke"
            app:hintTextColor="@color/white_input_stroke"
            app:boxStrokeWidthFocused="2dp"
            app:boxStrokeColor="@android:color/white"
            app:hintTextColor="@android:color/white">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/et_time"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Pickup Time"
                app:boxBackgroundMode="outline"
                app:boxStrokeColor="@color/white_input_stroke"
                app:hintTextColor="@color/white_input_stroke"
                app:boxStrokeWidthFocused="2dp"
                android:textColor="@android:color/white"
                android:textColorHint="@android:color/white"
                android:inputType="time"
                android:padding="16dp" />
        </com.google.android.material.textfield.TextInputLayout>

        <!-- Additional Notes -->
        <com.google.android.material.textfield.TextInputLayout
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="24dp"
            app:boxBackgroundMode="outline"
            app:boxStrokeColor="@color/white_input_stroke"
            app:hintTextColor="@color/white_input_stroke"
            app:boxStrokeWidthFocused="2dp"
            app:boxStrokeColor="@android:color/white"
            app:hintTextColor="@android:color/white">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/et_notes"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Notes for driver (optional)"
                android:textColor="@android:color/white"
                android:textColorHint="@android:color/white"
                android:inputType="textMultiLine"
                android:minLines="2"
                android:padding="16dp" />
        </com.google.android.material.textfield.TextInputLayout>

        <!-- Submit Button -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_request_ride"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Request Ride"
            android:textSize="16sp"
            android:textColor="@android:color/white"
            app:cornerRadius="12dp"
            app:backgroundTint="@color/white"
            android:textAllCaps="false"
            android:layout_marginTop="8dp"
            android:textColorHint="@color/primary" />

    </LinearLayout>

</ScrollView>
