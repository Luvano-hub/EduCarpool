<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent" android:layout_height="match_parent"
    android:background="@color/background">

    <!-- Simple top bar -->
    <LinearLayout
        android:layout_width="match_parent" android:layout_height="56dp"
        android:orientation="horizontal" android:gravity="center_vertical"
        android:background="@color/primary" android:paddingHorizontal="12dp">

        <ImageButton
            android:id="@+id/btnBack"
            android:layout_width="40dp" android:layout_height="40dp"
            android:background="?selectableItemBackgroundBorderless"
            android:src="@drawable/ic_arrow_back" />

        <TextView
            android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1"
            android:text="Carpool Matches" android:textStyle="bold" android:textColor="@color/white" android:textSize="18sp"
            android:paddingStart="8dp" />
    </LinearLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvMatches"
        android:layout_width="match_parent" android:layout_height="0dp"
        android:layout_weight="1" android:paddingTop="8dp" />

    <TextView
        android:id="@+id/tvEmpty"
        android:layout_width="match_parent" android:layout_height="wrap_content"
        android:text="No active carpool matches yet. Once a driver accepts your request, youâ€™ll be able to chat here!"
        android:padding="24dp" android:textAlignment="center" android:textColor="@color/gray_600"
        android:visibility="gone"/>
</LinearLayout>
