<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    app:cardCornerRadius="12dp"
    app:cardElevation="4dp"
    app:cardUseCompatPadding="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Driver Information -->
        <TextView
            android:id="@+id/tv_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Name: John Doe"
            android:textSize="16sp"
            android:textColor="@color/gray_800"
            android:textStyle="bold"
            android:layout_marginBottom="4dp" />

        <TextView
            android:id="@+id/tv_student_id"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Student ID: 123456"
            android:textSize="14sp"
            android:textColor="@color/gray_700"
            android:layout_marginBottom="4dp" />

        <TextView
            android:id="@+id/tv_email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Email: john@vossie.net"
            android:textSize="14sp"
            android:textColor="@color/gray_700"
            android:layout_marginBottom="4dp" />

        <TextView
            android:id="@+id/tv_phone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Phone: +1234567890"
            android:textSize="14sp"
            android:textColor="@color/gray_700"
            android:layout_marginBottom="4dp" />

        <TextView
            android:id="@+id/tv_address"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Address: 123 Main St"
            android:textSize="14sp"
            android:textColor="@color/gray_700"
            android:layout_marginBottom="4dp" />

        <TextView
            android:id="@+id/tv_detour_range"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Detour Range: 10 km"
            android:textSize="14sp"
            android:textColor="@color/gray_700"
            android:layout_marginBottom="12dp" />

        <!-- Document Previews Section -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Documents (Click to enlarge):"
            android:textSize="14sp"
            android:textColor="@color/gray_700"
            android:textStyle="bold"
            android:layout_marginBottom="8dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginBottom="12dp">

            <!-- License Section -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Driver's License:"
                android:textSize="12sp"
                android:textColor="@color/gray_600"
                android:layout_marginBottom="4dp" />

            <ImageView
                android:id="@+id/iv_license"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:background="@drawable/bg_rounded_edittext"
                android:scaleType="centerCrop"
                android:contentDescription="Driver's License"
                android:visibility="gone"
                android:layout_marginBottom="8dp" />

            <!-- Car Registration Section -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Car Registration:"
                android:textSize="12sp"
                android:textColor="@color/gray_600"
                android:layout_marginBottom="4dp" />

            <ImageView
                android:id="@+id/iv_car_reg"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:background="@drawable/bg_rounded_edittext"
                android:scaleType="centerCrop"
                android:contentDescription="Car Registration"
                android:visibility="gone"
                android:layout_marginBottom="8dp" />

        </LinearLayout>

        <!-- Action Buttons -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="2">

            <Button
                android:id="@+id/btn_reject"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Reject"
                android:textColor="@color/error"
                android:backgroundTint="@color/white"
                android:layout_marginEnd="4dp"
                app:cornerRadius="8dp"
                app:strokeColor="@color/error"
                app:strokeWidth="1dp" />

            <Button
                android:id="@+id/btn_approve"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Approve"
                android:textColor="@color/white"
                android:backgroundTint="@color/success"
                android:layout_marginStart="4dp"
                app:cornerRadius="8dp" />

        </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>